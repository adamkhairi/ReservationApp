@model ReservationApp.Models.Reservation

@{
    ViewData["Title"] = "Edit";
}


<h4 class="text-center font-weight-bold">Edit Reservation</h4>
<hr />
<div class="row m-4 ">
    <div class=" col-6 mx-auto card p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" disabled class="form-control" />
            
                
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cause" class="control-label"></label>
                <input asp-for="Cause" class="form-control" />
                <span asp-validation-for="Cause" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="ReservationTypeId" class="control-label"></label>
                <input asp-for="ReservationTypeId" class="form-control" />
                <span asp-validation-for="ReservationTypeId" class="text-danger"></span>
            </div>
            <div class="mx-auto mt-4 text-center">
                <input type="submit" value="Save" class="btn mx-auto btn-outline-success rounded-pill" />
            </div>
        </form>
    </div>
</div>

<div class="text-right">
    <a asp-action="Index" class="btn btn-outline-info rounded-pill">Go Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
